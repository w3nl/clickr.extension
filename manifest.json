{
   "manifest_version": 2,
   "author": "Pieter Wigboldus",
   "name": "Clickr",
   "description": "Clickr",
   "version": "0.0.3",
   "content_scripts": [
     {
         "matches": ["http://*/*","https://*/*"],
         "js": [
             "site_content_script.js"
          ]
      }
   ],
   "web_accessible_resources": [
       "node_modules/clickr/js/clickr.core.js",
       "test.login.js"
   ],
   "icons": {
       "256": "cursor256.png"
   },
   "browser_action": {
     "default_name": "Clickr",
     "default_icon": "cursor256.png",
     "default_popup": "popup.html"
   },
   "options_page": "options.html",
   "permissions": [
       "tabs",
       "http://*/*",
       "https://*/*",
       "declarativeContent",
       "storage"
   ]
}
